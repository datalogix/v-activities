{
  "name": "v-activities",
  "version": "0.2.0",
  "description": "Activities for Vue 3",
  "repository": "datalogix/v-activities",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build && vue-tsc --declaration --emitDeclarationOnly",
    "dev": "vite --port 3333 --open",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "preview": "vite preview",
    "test": "pnpm lint && vitest run",
    "test:unit": "pnpm test",
    "test:e2e": "cypress open",
    "cy": "cypress open-ct",
    "cy:ci": "cypress run-ct --quiet --reporter spec",
    "typecheck": "vue-tsc --noEmit",
    "coverage": "vitest run --coverage",
    "release": "pnpm test && pnpm build && changelogen --release && git push --follow-tags && npm publish"
  },
  "dependencies": {
    "@vueuse/core": "^9.13.0",
    "arrows-svg": "^1.5.6",
    "buffer": "^6.0.3",
    "change-case": "^4.1.2",
    "eve": "^0.5.4",
    "hookable": "^5.5.3",
    "jimp": "^0.22.7",
    "lodash.shuffle": "^4.2.0",
    "print-js": "^1.6.0",
    "snapsvg": "^0.5.1"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^5.0.5",
    "@cypress/vue": "^5.0.5",
    "@cypress/webpack-dev-server": "^3.4.1",
    "@iconify/json": "^2.2.48",
    "@types/jsdom": "^21.1.1",
    "@types/lodash.shuffle": "^4.2.7",
    "@types/node": "^18.15.11",
    "@types/snapsvg": "^0.5.2",
    "@unocss/reset": "^0.51.2",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-c8": "^0.30.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.1.3",
    "changelogen": "^0.5.2",
    "cypress": "^12.9.0",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.10.0",
    "jsdom": "^21.1.1",
    "sass": "^1.61.0",
    "typescript": "^5.0.4",
    "unocss": "^0.51.2",
    "unplugin-auto-import": "^0.15.2",
    "unplugin-icons": "^0.16.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.1",
    "vite-plugin-eslint": "^1.8.1",
    "vitepress": "^1.0.0-alpha.65",
    "vitest": "^0.30.0",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.2.0"
}
